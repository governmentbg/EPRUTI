@inject IStringLocalizer Localizer
@using Microsoft.Extensions.Localization
@using Ais.Utilities.Extensions
@model Ais.Data.Models.Document.OutDocument
<div class="step-box">
    <div class="step-box-head">
        <h3 class="step-box-title">
            @Localizer["Recipients"]
        </h3>
    </div>
    <div class="step-box-body applicants-js">
        @{
            if (Model?.Applicants.IsNotNullOrEmpty() == true)
            {
                var index = 1;
                foreach (var applicant in Model.Applicants!)
                {
                    ViewBag.ItemIndex = index;
                    await Html.RenderPartialAsync("~/Views/OutApplication/Applicant/_Applicant.cshtml", applicant);
                    index++;
                }
            }
        }
    </div>
</div>