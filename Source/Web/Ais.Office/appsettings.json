{
  "ModuleName": "Mrrb.Office",
  "ConnectionStrings": {
    "GuestConnection": "",
    "LoginConnection": "",
    "RedisConnection": ""
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Http", "Serilog.Sinks.Console", "Ais.Infrastructure" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System.Net.Http.HttpClient": "Debug",
        "System": "Error",
        "Microsoft": "Error"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithClientAgent",
      "WithCustomClientIp",
      "WithRequestContext",
      {
        "Name": "WithCorrelationId",
        "Args": {
          "addValueIfHeaderAbsence": true
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "easycaching": {
    "Disable": false,
    "Expiration": "00:10:00",
    "redis": {
      "CacheNulls": true,
      "SerializerName": "json",
      "dbconfig": {
        "KeyPrefix": "Mrrb.Office:Cache:"
      }
    }
  },
  "localization": {
    "DefaultCulture": "bg-BG",
    "SupportedCultures": [
      {
        "Id": "55b24098-c804-4c95-b7eb-f2b89e258084",
        "Name": "bg-BG",
        "Required": true
      },
      {
        "Id": "554add5c-3ed9-4efc-ac7a-951bb6528f34",
        "Name": "en-US",
        "Required": false
      }
    ]
  },
  "TableExport": {
    "ExportTypes": "xlsx,csv, pdf, pdf A4, pdf A3, pdf Dynamic"
  },
  "Attachment": {
    "VirtualPath": "/Uploads",
    "Domain": "",
    "UserName": "",
    "Password": "",
    "UploadsDirPath": "",
    "TempDirName": "Temp",
    "AsyncUploadChunkSize": 307200 // In bytes 307200 ~ 300ÐšB
  },
  "ElasticSearch": {
    "Uri": [],
    "log-index": "ais-logs",
    "User": null,
    "Password": null
  },
  "Api": {
    "AutomationUserId": ""
  },
  "StorageService": {
    "Url": "",
    "User": "",
    "Password": "",
    "KeepAlivePingDelay": 60,
    "KeepAlivePingTimeout": 30,
    "EnableMultipleHttp2Connections": true,
    "SkipSslCertificatesCheck": true
  },
  "Session": {
    "IdleTimeout": 60, // In minutes
    "WarningTimeout": 54 // In minutes
  },
  "Authentication": {
    "Expires": 55, // In minutes
    "RememberMeExpires": 7, // In days
    "ValidateInterval": 10, // In minutes
    "TokenTimeout": "5", //In minutes,
    "QrCodeAbsoluteUrl": true
  },
  "UseHttps": true,
  "ReportingServiceApiUrl": "",
  "AisWebApi": {
    "Url": "",
    "Timeout": 120,
    "User": "",
    "Password": ""
  },
  "Application": {
    "MaxObjectsPerService": 4000,
    "ValidateSign": true
  },
  "EncryptKey": "",
  "LinkExpirationPeriod": "1440",
  "PortalChangePasswordLink": "",
  "Cors": {
    "Origins": [ "localhost:*" ]
  },
  "Regix": {
    "Url": "",
    "StoreLocation": null,
    "StoreName": null,
    "X509FindType": null,
    "FindValue": "",
    "AdministrationName": "",
    "AdministrationOId": "",
    "LawReason": "",
    "Remark": "*",
    "ServiceType": "*",
    "ServiceURI": "*",
    "ValidateXml": "false"
  },
  "TempPdfDir": "wwwroot/TempPdf",
  "Search": {
    "DefaultLimit": 200,
    "MaxLimit": 5000
  },
  "Signature": {
    "Client": {
      "OffsetX": 160,
      "OffsetY": 800,
      "Width": 200,
      "Height": 50
    },
    "Employee": {
      "OffsetX": 400,
      "OffsetY": 160,
      "Width": 150,
      "Height": 60
    }
  }
}
